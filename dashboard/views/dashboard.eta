<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= it.config.nickNameBot %> Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="/css/dashboard.css" rel="stylesheet">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container-fluid">
            <a class="navbar-brand d-flex align-items-center" href="#">
                <img src="/images/beb-logo.png" alt="Bot Logo" width="40" height="40" class="me-2">
                <%= it.config.nickNameBot %> Dashboard
            </a>
            <div class="navbar-nav ms-auto">
                <span class="navbar-text me-3">
                    <span class="live-indicator"></span>
                    <i class="fas fa-circle text-success"></i> Live
                </span>
                <button class="btn btn-outline-light btn-sm" onclick="logout()">
                    <i class="fas fa-sign-out-alt"></i> Logout
                </button>
            </div>
        </div>
    </nav>

    <div class="container-fluid mt-4">
        <div class="row">
            <!-- Stats Cards -->
            <div class="col-md-3 mb-4">
                <div class="card bg-primary text-white">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <div>
                                <h6 class="card-title">Total Threads</h6>
                                <h3 id="totalThreads"><%= it.totalThreads %></h3>
                            </div>
                            <div class="align-self-center">
                                <i class="fas fa-comments fa-2x"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-3 mb-4">
                <div class="card bg-success text-white">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <div>
                                <h6 class="card-title">Total Users</h6>
                                <h3 id="totalUsers"><%= it.totalUsers %></h3>
                            </div>
                            <div class="align-self-center">
                                <i class="fas fa-users fa-2x"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-3 mb-4">
                <div class="card bg-info text-white">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <div>
                                <h6 class="card-title">Bot Prefix</h6>
                                <h3><%= it.config.prefix %></h3>
                            </div>
                            <div class="align-self-center">
                                <i class="fas fa-hashtag fa-2x"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-3 mb-4">
                <div class="card bg-warning text-white">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <div>
                                <h6 class="card-title">
                                    <span class="live-indicator"></span>Uptime
                                    <i class="fas fa-wifi text-success ms-1" title="Real-time connection"></i>
                                </h6>
                                <h3 id="uptime" class="counter">Loading...</h3>
                                <div id="uptimeDetails" class="text-white-50">
                                    <small>
                                        <i class="fas fa-sync fa-spin me-1"></i>
                                        Connecting...
                                    </small>
                                </div>
                            </div>
                            <div class="align-self-center">
                                <i class="fas fa-clock fa-2x"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="row">
            <!-- File Manager -->
            <div class="col-md-6 mb-4">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5><i class="fas fa-file-code"></i> File Manager</h5>
                        <div class="btn-group" role="group">
                            <button class="btn btn-sm btn-outline-primary" onclick="loadFile('config.json')">
                                Config.json
                            </button>
                            <button class="btn btn-sm btn-outline-secondary" onclick="loadFile('account.txt')">
                                Account.txt
                            </button>
                        </div>
                    </div>
                    <div class="card-body">
                        <!-- File Type Selection -->
                        <div class="row mb-3">
                            <div class="col-md-4">
                                <label for="fileType" class="form-label">File Type</label>
                                <select class="form-select" id="fileType" onchange="loadFileType()">
                                    <option value="">Choose type...</option>
                                    <option value="config">Config Files</option>
                                    <option value="cmds">Commands (scripts/cmds)</option>
                                    <option value="events">Events (scripts/events)</option>
                                </select>
                            </div>
                            <div class="col-md-6">
                                <label for="fileSelect" class="form-label">Select File</label>
                                <select class="form-select" id="fileSelect" onchange="loadSelectedFile()" disabled>
                                    <option value="">Choose a file...</option>
                                </select>
                            </div>
                            <div class="col-md-2">
                                <label class="form-label">&nbsp;</label>
                                <button type="button" class="btn btn-primary w-100" onclick="showCreateFileModal()" id="createFileBtn" disabled>
                                    <i class="fas fa-plus me-2"></i>New File
                                </button>
                            </div>
                        </div>

                        <!-- File Content Editor -->
                        <div class="mb-3">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <label for="fileContent" class="form-label mb-0">File Content</label>
                                <div id="fileInfo" class="text-muted small"></div>
                            </div>
                            <textarea class="form-control" id="fileContent" rows="20" placeholder="Select a file to view its content" style="font-family: 'Courier New', monospace; font-size: 14px;"></textarea>
                        </div>

                        <!-- Action Buttons -->
                        <div class="d-flex gap-2 flex-wrap">
                            <button type="button" class="btn btn-success" onclick="saveFile()" disabled id="saveBtn">
                                <i class="fas fa-save me-2"></i>Save File
                            </button>
                            <button type="button" class="btn btn-warning" onclick="reloadFile()" disabled id="reloadBtn">
                                <i class="fas fa-sync-alt me-2"></i>Reload Command
                            </button>
                            <button type="button" class="btn btn-info" onclick="formatJSON()" title="Format JSON (Ctrl+Shift+F)">
                                <i class="fas fa-code me-2"></i>Format JSON
                            </button>
                            <button type="button" class="btn btn-secondary" onclick="copyContent()" title="Copy Content (Ctrl+Shift+C)">
                                <i class="fas fa-copy me-2"></i>Copy
                            </button>
                            <button type="button" class="btn btn-danger" onclick="deleteFile()" disabled id="deleteBtn">
                                <i class="fas fa-trash me-2"></i>Delete File
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Bot Controls -->
            <div class="col-md-6 mb-4">
                <div class="card">
                    <div class="card-header">
                        <h5><i class="fas fa-robot"></i> Bot Controls</h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-4">
                            <h6>Bot Information</h6>
                            <div class="row">
                                <div class="col-sm-6">
                                    <strong>Bot Name:</strong><br>
                                    <span class="text-muted"><%= it.config.nickNameBot %></span>
                                </div>
                                <div class="col-sm-6">
                                    <strong>Prefix:</strong><br>
                                    <span class="text-muted"><%= it.config.prefix %></span>
                                </div>
                            </div>
                        </div>

                        <div class="mb-4">
                            <h6>
                                <i class="fas fa-server me-1"></i>System Status
                                <span class="live-indicator ms-2"></span>
                            </h6>
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="d-flex align-items-center mb-2">
                                        <span class="badge bg-success me-2 status-indicator" title="Bot is online and responding">
                                            <i class="fas fa-robot me-1"></i>Online
                                        </span>
                                        <span>Bot Status</span>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="d-flex align-items-center mb-2">
                                        <span class="badge bg-info me-2" id="memoryUsage" title="Real-time memory usage">
                                            <i class="fas fa-memory me-1"></i>Loading...
                                        </span>
                                        <span>Memory Usage</span>
                                    </div>
                                </div>
                                <div class="col-sm-6 mt-2">
                                    <div class="d-flex align-items-center mb-2">
                                        <span class="badge bg-primary me-2" title="Database connection status">
                                            <i class="fas fa-database me-1"></i>Connected
                                        </span>
                                        <span>Database</span>
                                    </div>
                                </div>
                                <div class="col-sm-6 mt-2">
                                    <div class="d-flex align-items-center mb-2">
                                        <span class="badge bg-success me-2" title="Dashboard server status">
                                            <i class="fas fa-tachometer-alt me-1"></i>Active
                                        </span>
                                        <span>Dashboard</span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Actions -->
                        <div class="card bg-dark border-secondary shadow-sm">
                            <div class="card-body">
                                <h5 class="card-title text-primary mb-3">
                                    <i class="fas fa-cogs me-2"></i>Quick Actions
                                </h5>
                                <div class="d-grid gap-2">
                                    <button class="btn btn-warning" onclick="restartBot()">
                                        <i class="fas fa-sync-alt me-2"></i>Restart Bot
                                    </button>
                                    <button class="btn btn-danger" onclick="clearCookiesAndRestart()">
                                        <i class="fas fa-trash-alt me-2"></i>Clear Cookies & Restart
                                    </button>
                                </div>
                            </div>
                        </div>

                        <!-- FCA Type Switcher -->
                        <div class="card bg-dark border-secondary shadow-sm mt-3">
                            <div class="card-body">
                                <h5 class="card-title text-info mb-3">
                                    <i class="fas fa-exchange-alt me-2"></i>FCA Library
                                </h5>
                                <div class="mb-2">
                                    <small class="text-muted">Current: <span id="currentFca" class="badge bg-success">stfca</span></small>
                                </div>
                                <select class="form-select bg-secondary text-white mb-2" id="fcaTypeSelect">
                                    <option value="stfca" selected>ST-FCA (Recommended)</option>
                                    <option value="dongdev">@dongdev/fca-unofficial</option>
                                </select>
                                <button class="btn btn-info w-100" onclick="switchFcaType()">
                                    <i class="fas fa-sync me-2"></i>Switch & Restart
                                </button>
                                <small class="text-warning d-block mt-2">
                                    <i class="fas fa-exclamation-triangle me-1"></i>Will clear cookies & restart
                                </small>
                            </div>
                        </div>

                        <div>
                            <h6>Database Stats</h6>
                            <div class="row text-center">
                                <div class="col-6">
                                    <div class="border rounded p-2">
                                        <div class="h4 mb-0 text-primary" id="dbThreads"><%= it.totalThreads %></div>
                                        <small class="text-muted">Threads</small>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="border rounded p-2">
                                        <div class="h4 mb-0 text-success" id="dbUsers"><%= it.totalUsers %></div>
                                        <small class="text-muted">Users</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Logs Section -->
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5><i class="fas fa-terminal"></i> System Logs</h5>
                        <button class="btn btn-sm btn-outline-secondary" onclick="clearLogs()">
                            <i class="fas fa-trash"></i> Clear
                        </button>
                    </div>
                    <div class="card-body">
                        <div id="logsContainer" class="bg-dark text-light p-3 rounded" style="height: 300px; overflow-y: auto; font-family: monospace;">
                            <div class="log-entry">
                                <span class="text-success">[INFO]</span> Dashboard loaded successfully
                            </div>
                            <div class="log-entry">
                                <span class="text-info">[SYSTEM]</span> Bot is running normally
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Create File Modal -->
    <div class="modal fade" id="createFileModal" tabindex="-1" aria-labelledby="createFileModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="createFileModalLabel">Create New File</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="newFileName" class="form-label">File Name</label>
                        <input type="text" class="form-control" id="newFileName" placeholder="e.g., mycommand.js">
                        <div class="form-text">Enter filename with .js extension</div>
                    </div>
                    <div class="mb-3">
                        <label for="newFileContent" class="form-label">Initial Content (Optional)</label>
                        <textarea class="form-control" id="newFileContent" rows="8" placeholder="Leave empty to use default template"></textarea>
                        <div class="form-text">Leave empty to auto-generate template</div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary" onclick="createNewFile()">Create File</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Toast notification -->
    <div class="toast-container position-fixed bottom-0 end-0 p-3">
        <div id="toast" class="toast" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="toast-body" id="toastBody">
                Notification message here
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Custom JS -->
    <script src="/js/dashboard.js"></script>
</body>
</html>